<%- include ../partials/header.ejs %>

	<main>
		<% 
		const jobs = [];
		const meets = [];
		const hires = [];
		posts.forEach((post) => { 
			if(post.category == 'Job') {
				jobs.push(post)
			} else if (post.category == 'Meet') {
				meets.push(post)
			} else if (post.category == 'Hire') {
				hires.push(post)
			}
		})%>



		<div class = "container">
			<div class = "row">
				<div class = "col text-center">
					<h2 class="category">Jobs</h2>
					<ul class="list-group list-group-flush">
						<% jobs.forEach((post) => { %>
							<li class="list-group-item">								
								<a href="/posts/<%=post._id%>"><%=post.title%></a>
							</li>
						<% }) %>
					</ul>
				</div>
				<div class = "col text-center">
					<h2 class="category">Meet - ups</h2>
					<ul class="list-group list-group-flush">
						<% meets.forEach((post) => { %>
							<li class="list-group-item">								
								<a href="/posts/<%=post._id%>"><%=post.title%></a>
							</li>
						<% }) %>
					</ul>
				</div>
				<div class = "col text-center">
					<h2 class="category">Job Candidates</h2>
					<ul class="list-group list-group-flush">
						<% hires.forEach((post) => { %>
							<li class="list-group-item">								
								<a href="/posts/<%=post._id%>"><%=post.title%></a>
							</li>
						<% }) %>
					</ul>
				</div>
			</div>
		</div>

	</main>

<%- include ../partials/footer.ejs %>
