<%- include ../partials/header.ejs %>

<form class="new" action="/posts/<%=post._id%>?_method=PUT" method="POST">
	Title: <input type="text" name="title" value="<%=post.title%>" required><br>
	<!-- <option></option> -->
	Image URL:<input type="text" name="image" value="<%=post.image%>"><br>
	Description: <textarea name="description" required><%=post.description%></textarea><br>
	Location: <input type="text" name="location" value="<%=post.location%>"><br>
	Email: <input type="text" name="email" value="<%=post.email%>"><br>
	<button>Update Post</button>
</form>

