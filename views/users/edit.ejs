<%- include ('../partials/header.ejs') %>

<form class="form" action="/users/<%=foundUser._id%>?_method=PUT" method="POST">
  <h2>Edit <%=foundUser.name%>'s Profile</h2>
  <input type="email" name="email" placeholder="email" value="<%=foundUser.email%>" required><br>
  <input type="text" name="phone" placeholder="phone #(optional)" value="<%=foundUser.phone%>"><br>
  <input type="text" name="linkedin" placeholder="LinkedIn(optional)" value="<%=foundUser.linkedin%>"><br>
  <button>Update</button>
  <a href="/users/<%=foundUser.id%>/delete">Delete this User</a>
</form>

