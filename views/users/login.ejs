<%- include ../partials/header.ejs %>

<p class="text-danger"> <%= message %> </p>

<form class="form m-5" action="/users/login" method="POST">
	<div class="form-row">
    <div class="col">
  		<div class="form-group">
    		<label>Username</label>
    		<input type="text" class="form-control" name="name" id="usernameLoginInput" placeholder="Your username" required>
  		</div>
  	</div>
  </div>
  
	<div class="form-row">
		<div class="col">
			<div class="form-group">
    		<label>Password</label>
    		<input type="password" name="password" class="form-control" id="passwordLoginInput" placeholder="Your password" required>
    	</div>
    </div>
  </div>
  <button>Login</button>
</form>

<p class="m-5">Want to make an account? <a href="/users/register">Sign up here!</a></p>

